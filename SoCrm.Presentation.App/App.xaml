<Application x:Class="SoCrm.Presentation.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:SoCrm.Presentation.App.ViewModels"
             xmlns:views="clr-namespace:SoCrm.Presentation.App.Views" xmlns:app="clr-namespace:SoCrm.Presentation.App"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModels:UserListViewModel}">
            <views:UserListView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:CreateUserViewModel}">
                <views:CreateUserView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:MainViewModel}">
                <app:MainView/>
            </DataTemplate>
    </Application.Resources>
</Application>
